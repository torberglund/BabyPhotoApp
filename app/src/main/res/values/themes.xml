<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.BabyPhotoApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_500</item>
        <!-- Darker variant used for the status bar -->
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <!-- Text/icon color on top of primary -->
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <!-- Text/icon color on top of secondary -->
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar should match colorPrimaryVariant -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/purple_700</item>
        <!-- Optional: navigation bar color -->
        <item name="android:navigationBarColor" tools:targetApi="o">@color/teal_700</item>
    </style>

    <!-- Day mode overrides -->
    <style name="Theme.BabyPhotoApp.Day" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>


</resources>
